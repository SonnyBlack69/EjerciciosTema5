
public class SmartPhone extends SmartDevice {
    String modelo;
    int RAM;
    String tipoPantalla;
    Double pulgadas;

    public SmartPhone() {
        modelo = "Pocophone X1";
        RAM =  16;
        tipoPantalla = "OLED";
        pulgadas = 7.5;
    }

    //Constructor con par√°metros.
    public SmartPhone(String fabricante, String modelo, int RAM, String tipoPantalla, Double pulgadas) {
        this.modelo = modelo;
        this.RAM = RAM;
        this.tipoPantalla = tipoPantalla;
        this.pulgadas = pulgadas;
    }
}
